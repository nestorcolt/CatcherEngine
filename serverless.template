  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "An AWS Serverless Application.",
  "Parameters": {
    "AccountId": {
        "Type": "String",
        "Default": "436783151981"
    }
  },

  "Resources": {
    "SearchEngineGetUserBlocks": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "FunctionName": "SearchEngineGetUserBlocks",
        "Handler": "SearchEngine::SearchEngine.Serverless.GetUserBlocks::FunctionHandler",
        "Runtime": "dotnetcore3.1",
        "CodeUri": "",
        "MemorySize": 1024,
        "Timeout": 30,
        "Policies": [
          "AWSLambdaBasicExecutionRole",
          "AmazonSNSFullAccess",
          "AmazonDynamoDBFullAccess"
        ],
        "Events":{
            "SnsEvent": {
                "Type": "SNS",
                "Properties": {
                  "Topic": {"Fn::Sub": "arn:aws:sns:us-east-1:${AccountId}:SE-START-SEARCH"}
